<VBox prefHeight="680.0" prefWidth="770.0" spacing="10.0" styleClass="gradient-background" stylesheets="@../../../../../EKrut-Common/src/gui-assets/styles/Styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ekrut.client.gui.ReportChooserController">
  <children>
      <Pane prefHeight="120.0" prefWidth="770.0" styleClass="container" stylesheets="@../../../../../EKrut-Common/src/gui-assets/styles/Styles.css">
         <children>
            <Text fill="WHITE" fontSmoothingType="LCD" layoutX="127.0" layoutY="87.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Choose report ">
               <font>
                  <Font name="Candara Bold" size="78.0" />
               </font>
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.4198473393917084" />
                     </color>
                  </DropShadow>
               </effect>
            </Text>
         </children>
      </Pane>
      <Pane prefHeight="555.0" prefWidth="770.0" styleClass="container" stylesheets="@../../../../../EKrut-Common/src/gui-assets/styles/Styles.css">
         <children>
            <VBox alignment="CENTER" layoutX="-5.0" prefHeight="534.0" prefWidth="770.0">
               <children>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label alignment="CENTER" text="Type:" textFill="WHITE">
                           <font>
                              <Font name="Candara Bold" size="30.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <effect>
                              <DropShadow />
                           </effect>
                        </Label>
                        <ComboBox fx:id="typeComboBox" prefHeight="55.0" prefWidth="180.0" promptText="Choose Type" styleClass="menu_button" stylesheets="@gui-assets/styles/Styles.css" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label alignment="CENTER" text="Area:" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font name="Candara Bold" size="30.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <effect>
                              <DropShadow />
                           </effect>
                        </Label>
                        <ComboBox fx:id="areaComboBox" disable="true" prefHeight="55.0" prefWidth="180.0" promptText="Choose Area" styleClass="menu_button" stylesheets="@gui-assets/styles/Styles.css" />
