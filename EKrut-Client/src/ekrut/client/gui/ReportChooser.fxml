                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="774.0">
                     <children>
                        <Label alignment="CENTER" text="Location:" textAlignment="CENTER" textFill="WHITE">
                           <font>
                              <Font name="Candara Bold" size="30.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <effect>
                              <DropShadow />
                           </effect>
                        </Label>
                        <ComboBox fx:id="locationComboBox" disable="true" prefHeight="55.0" prefWidth="200.0" promptText="Choose Location" styleClass="menu_button" stylesheets="@gui-assets/styles/Styles.css" />
                     </children>
                  </HBox>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label alignment="CENTER" text="Year:" textFill="WHITE">
                           <font>
                              <Font name="Candara Bold" size="30.0" />
                           </font>
                           <HBox.margin>
                              <Insets right="15.0" />
                           </HBox.margin>
                           <effect>
                              <DropShadow />
                           </effect>
                        </Label>
                        <ComboBox fx:id="yearComboBox" prefHeight="55.0" prefWidth="180.0" promptText="Choose Year" styleClass="combo-box" stylesheets="@gui-assets/styles/Styles.css" />
                        <Label alignment="CENTER" text="Month:" textFill="WHITE">
                           <font>
                              <Font name="Candara Bold" size="30.0" />
                           </font>
                           <HBox.margin>
                              <Insets left="60.0" right="15.0" />
                           </HBox.margin>
                           <effect>
                              <DropShadow />
                           </effect>
                        </Label>
                        <ComboBox fx:id="monthComboBox" prefHeight="55.0" prefWidth="200.0" promptText="Choose Month" styleClass="menu_button" stylesheets="@gui-assets/styles/Styles.css" />
                     </children>
                  </HBox>
                  <Button fx:id="viewReportButton" mnemonicParsing="false" onAction="#viewReport" prefHeight="48.0" prefWidth="153.0" text="View Report" textFill="WHITE">
                     <font>
                        <Font name="Candara Bold Italic" size="18.0" />
                     </font>
                     <effect>
                        <DropShadow height="19.12" radius="9.530000000000001">
                           <color>
                              <Color opacity="0.47999998927116394" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Button>
                  <Label fx:id="reportErrorLabel" prefWidth="432.0" text="Report Doesn't exsits" textAlignment="CENTER" textFill="#ff5555" underline="true" visible="false">
                     <font>
                        <Font name="Candara Bold" size="47.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="20.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
         </children>
      </Pane>
  </children>
</VBox>
