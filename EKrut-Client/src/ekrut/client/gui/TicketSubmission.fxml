<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="680.0" prefWidth="770.0" spacing="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ekrut.client.gui.TicketSubmissionController">
   <children>
      <VBox alignment="CENTER" prefHeight="150.0" prefWidth="770.0" styleClass="container" stylesheets="@../../../../../EKrut-Common/src/gui-assets/styles/Styles.css">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label contentDisplay="CENTER" text="Submit Tickets" textFill="WHITE">
               <font>
                  <Font name="Candara Bold" size="50.0" />
               </font>
               <effect>
                  <DropShadow>
                     <color>
                        <Color opacity="0.699999988079071" />
                     </color>
                  </DropShadow>
               </effect>
            </Label>
         </children>
      </VBox>
      <Pane prefHeight="520.0" prefWidth="770.0">
         <children>
            <ComboBox fx:id="workerCombo" layoutX="554.0" layoutY="94.0" onAction="#workerComboSelected" prefWidth="150.0" promptText="Select worker" />
            <ComboBox fx:id="facilityCombo" layoutX="77.0" layoutY="94.0" onAction="#facilityComboSelected" prefWidth="150.0" promptText="Select machine" />
            <ComboBox fx:id="itemCombo" layoutX="310.0" layoutY="94.0" onAction="#itemComboSelected" prefWidth="150.0" promptText="Select item" />
            <Label layoutX="365.0" layoutY="70.0" text="ITEM" />
            <Label layoutX="129.0" layoutY="70.0" text="FACILITY" />
            <Label layoutX="615.0" layoutY="70.0" text="WORKER" />
            <ImageView fitHeight="44.0" fitWidth="46.0" layoutX="243.0" layoutY="85.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@gui-assets/right-arrow.png" />
               </image>
            </ImageView>
            <ImageView fitHeight="44.0" fitWidth="46.0" layoutX="486.0" layoutY="85.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@gui-assets/right-arrow.png" />
               </image>
            </ImageView>
            <Label layoutX="32.0" layoutY="233.0" text="TICKET PREVIEW:" />
            <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="260.0" prefHeight="100.0" prefWidth="740.0" spacing="7.0" style="-fx-border-color: gray;" stylesheets="@../../../../../EKrut-Common/src/gui-assets/styles/Styles.css">
               <children>
                  <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="242.0" spacing="10.0">
                     <children>
                        <Label fx:id="assignedForLbl" prefHeight="40.0" style="-fx-border-color: black; -fx-background-color: #2f88ff; -fx-border-radius: 20; -fx-background-radius: 20;" text="Assigned for:  Kruskal" textFill="WHITE">
                           <font>
                              <Font name="Candara Bold" size="18.0" />
                           </font>
                           <padding>
                              <Insets left="10.0" right="10.0" />
                           </padding>
                        </Label>
                        <Label fx:id="areaPlusLocationLbl" text="AREANAME, EKRUTLOCATION" textFill="WHITE">
                           <font>
                              <Font name="Candara Bold" size="16.0" />
                           </font>
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                           <effect>
                              <DropShadow />
                           </effect>
                        </Label>
                     </children>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </VBox>
                  <VBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="376.0" spacing="10.0">
                     <children>
                        <Label fx:id="ticketMsgLbl" prefHeight="100.0" prefWidth="374.0" text="Add 16 units of Mana Hama" wrapText="true">
                           <font>
                              <Font name="Candara Bold" size="25.0" />
                           </font>
                           <VBox.margin>
                              <Insets />
                           </VBox.margin>
                        </Label>
                     </children>
                  </VBox>
                  <Button fx:id="markCompletedBtn" alignment="CENTER" contentDisplay="BOTTOM" graphicTextGap="0.0" mnemonicParsing="false" prefHeight="85.0" prefWidth="88.0" style="-fx-background-color: #8adaa0; -fx-border-color: none;" text="Mark completed" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="13.0" />
                     </font>
                     <graphic>
                        <ImageView fitHeight="37.0" fitWidth="59.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@gui-assets/v.png" />
                           </image>
                        </ImageView>
                     </graphic>
                     <HBox.margin>
                        <Insets right="8.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
            <Button fx:id="submitBtn" layoutX="313.0" layoutY="439.0" mnemonicParsing="false" onAction="#submitBtnAction" text="SUBMIT REPORT" />
            <Label layoutX="251.0" layoutY="174.0" text="After ticket approval, the ficket will be formed" />
         </children>
      </Pane>
   </children>
</VBox>
